{
  "name": "Debunc",
  "description": "Debunc is a fact-checking extension that helps users verify claims and detect misinformation directly within their browser.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": "public/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
   {
     "matches": ["https://*.x.com/*"],
     "js": ["scripts/content-script.js"],
     "runAt": "document_end"
   }
 ],
 "permissions": [
    "identity",
    "identity.email"
  ],
  "oauth2": {
    "client_id": "288187946961-taen90p3jpieajg6vr6kjlvlctaiggov.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  }
}